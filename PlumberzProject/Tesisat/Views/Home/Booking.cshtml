@model DataAccessLayer.Entities.Booking
@{
    ViewData["Title"] = "Booking";
    Layout = "~/Views/Shared/_MenusLayout.cshtml";
}

<!-- Booking Start -->
<div class="container-fluid my-5 px-0">
  
    <div class="container position-relative wow fadeInUp" data-wow-delay="0.1s" style="margin-top: -6rem;">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="bg-light text-center p-5">
                    <h1 class="mb-4">Bir Hizmet İçin Rezervasyon Yaptırın</h1>
                    <form asp-action="Booking" method="post">
                        <div class="row g-3">
                            <div class="col-12 col-sm-6">
                         @*       <label asp-for="FullName">Adınız ve Soyadınız</label>*@
                                <input asp-for="FullName" class="form-control border-0" placeholder="Ad ve Soyad" style="height: 55px;">
                           
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="col-12 col-sm-6">
                               @*     <label asp-for="Mail">Maliniz</label>*@
                                    <input asp-for="Mail" type="email" class="form-control" placeholder="Mail" style="height: 55px; width:250px; ">
                               
                            </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <select class="form-select border-0" style="height: 55px;">
                                    <option selected>Bir Hizmet Seçin</option>
                                    <option value="1">Su Tesisatı Hizmetleri</option>
                                    <option value="2">Isıtma ve Soğutma Sistemleri</option>
                                    <option value="3">Kanalizasyon ve Atık Su Hizmetleri</option>
                                    <option value="3">Sulama Sistemleri</option>
                                    <option value="3">Doğalgaz Tesisatı</option>
                                    <option value="3">Yangın Söndürme Tesisatı</option>
                                    <option value="3">Su Arıtma ve Filtrasyon Sistemleri</option>
                                    <option value="3">Acil Durum Hizmetleri</option>
                                </select>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="col-12 col-sm-6">
                                @*    <label asp-for="Tarih">Tarih</label>*@
                                    <input asp-for="Tarih" class="form-control border-0 datetimepicker-input" placeholder="Rezervasyon Tarihi" style="height: 55px; width:250px;   ">
                           
                                </div>
                            </div>
                            <div class="col-12">
                           @*     <label asp-for="Description">Mesaj</label>*@
                                <textarea asp-for="Description" class="form-control border-0" style="height: 55px;" placeholder="Özel Mesaj"></textarea>
                              
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Şİmdi Rezervasyon Yap</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

