@model IEnumerable<DataAccessLayer.Entities.Team>

<!-- Team Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="text-secondary text-uppercase">Bizim Teknisyenler</h6>
            <h1 class="mb-5">Uzman Teknisyenlerimiz</h1>
        </div>
        <div class="row g-4">
                  @foreach (var item in Model)
                    {
                        
                  
            <div class="col-lg-3 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                <div class="team-item">
              
                    <div class="position-relative overflow-hidden">
                        <img class="img-fluid" src="~/Img/@item.Image" alt="">
                    </div>
                    <div class="team-text">
                        <div class="bg-light">
                            <h5 class="fw-bold mb-0">@item.FullName</h5>
                            <small>@item.Duty</small>
                        </div>
                        <div class="bg-primary">
                            <a class="btn btn-square mx-1" href="@item.SocialMedya1"><i class="fab fa-facebook-f"></i></a>
                                <a class="btn btn-square mx-1" href="@item.SocialMedya1"><i class="fab fa-twitter"></i></a>
                                <a class="btn btn-square mx-1" href="@item.SocialMedya1"><i class="fab fa-instagram"></i></a>
                        </div>
                    </div>
                   
                </div>
            </div>
            }
        </div>
    </div>
</div>
