@model IEnumerable<DataAccessLayer.Entities.Dtos.AdminDtos.FactListDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Hakikat(Toplam Sayılar) Liste Paneli</h1>

<p>
    <a class="btn btn-warning" asp-action="Create">Yeni Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.YearsExperince)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpertTechnicon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PleasedCustomerr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompletedProject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastUpdateedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RowOrder)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.YearsExperince)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpertTechnicon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PleasedCustomerr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompletedProject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdateedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RowOrder)
            </td>
            <td>
                     <a class="btn btn-outline-danger" asp-action="Edit" asp-route-id="@item.Id">Güncelle</a>
                        <hr>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
